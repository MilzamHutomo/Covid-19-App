<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/content_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/content_num"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam laoreet tincidunt arcu, fringilla luctus urna. Etiam et ante elementum, auctor purus vel, eleifend mi. Etiam pulvinar arcu odio, nec viverra purus auctor vel. Sed pretium leo massa, et luctus sem laoreet nec. Nam eget commodo quam. Curabitur tincidunt dui massa, quis aliquet eros venenatis vitae. In at lacinia quam, ut vehicula dolor. Praesent finibus mollis nulla, sed lobortis tellus egestas id."
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>